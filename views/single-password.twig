{% extends 'layout/default.twig' %}

{% block content %}
	<form class="password-form" action="{{ site.link }}/wp-login.php?action=postpass" method="post">
		<label for="pwbox-{{ post.ID }}">{{ __('Password:', domain) }}</label>
		<input class="password-box" name="post_password" id="pwbox-{{ post.ID }}" type="password"
			   placeholder="{{ __('Password', domain) }}"
			   size="20" maxlength="20"/>
		<input class="password-btn" type="submit" name="submit" value="{{ __('Submit', domain) }}"/>
	</form>
{% endblock %}
